<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <stroke android:width="0dip" android:color="#e6e6e6" />
            <gradient android:angle="-90" android:endColor="#ffffff" android:startColor="@color/white" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <stroke android:width="0dip" android:color="#e5e5e5" />
            <gradient android:angle="-90" android:endColor="#ffffff" android:startColor="@color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="10dp" android:bottomRightRadius="10dp" android:topLeftRadius="10dp" android:topRightRadius="10dp" />
            <stroke android:width="0dip" android:color="#e4e4e4" />
            <gradient android:angle="-90" android:endColor="#ffffff" android:startColor="@color/white" />
        </shape>
    </item>
</selector>